<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SomethingBigTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SomethingBigTextViewTitle" parent="SomethingBigTextView">
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">20sp</item>
        <item name="maxLines">2</item>
    </style>

    <style name="SomethingBigTextViewSmall" parent="SomethingBigTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SomethingBigTextViewGray" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>